<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

	<comment>
		Member Mapper
	</comment>
	
	<entry key="login">
		SELECT
		       MEM_NO,
		       MEM_NAME,
		       MEM_PHONE,
		       MEM_ID,
		       MEM_PWD,
		       NICKNAME,
		       EMAIL,
		       BORN_DATE,
		       JOIN_DATE,
		       MEM_STATUS,
		       DELETE_YN
	      FROM
	           TB_MEMBER
	      JOIN
	      	   TB_NONMEM USING(MEM_NO)
	     WHERE
	           MEM_ID = ?
	       AND
	           MEM_PWD = ?
	       AND
	           DELETE_YN = 'Y' <!-- 회원 Y, 비회원 N -->
	       AND
	           MEM_STATUS = 'Y' <!-- 비회원/회원 중 회원 -->
	</entry>
	
	<entry key="insertMember">
		INSERT
		   ALL
		  INTO
		       TB_NONMEM
		VALUES
		       (
		       SEQ_MNO.NEXTVAL,
		       ?, <!-- 이름 -->
		       ?, <!-- 번호 -->
		       DEFAULT <!-- 회원 / 비회원 -->
		       )
		  INTO
		       TB_MEMBER
		VALUES
		       (
		       SEQ_MNO.CURRVAL,
		       ?, <!-- 아이디 -->
		       ?, <!-- 비밀번호 -->
		       ?, <!-- 닉네임 -->
		       ?, <!-- 생년월일 -->
		       ?, <!-- 이메일 -->
		       DEFAULT, <!-- 탈퇴여부 -->
		       SYSDATE <!-- 가입일 -->
		       )
		SELECT
		       *
		  FROM
		       DUAL
		       
	</entry>
